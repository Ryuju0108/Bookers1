<h1>Editing Book</h1>

<%= form_for(@blog) do |f| %>
	<% if @blog.errors.any? %>
		<p><%= @blog.errors.count %> errors prohibited this book from being saved:</p>
	<% end %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<%= f.submit 'Update Book' %>

	<%= link_to "Show", blog_path(@blog) %> |
	<%= link_to "Back", blogs_path %>
<% end %>
